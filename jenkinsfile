pipeline {
    agent any
    tools {
        maven 'Maven'
    }

 

    stages {
        stage("Clone the project") {
            steps {
                git branch: 'master', url: 'https://github.com/gowthami1409/GJ.git'
            }
        }

 

        stage('Build') {
            steps {
                bat 'mvn clean compile'
            }
        }

 

        stage('Test') {
            steps {
                bat 'mvn test'
            }
        }

 

        stage('Package') {
            steps {
                bat 'mvn package'
            }
        }
    }
}
